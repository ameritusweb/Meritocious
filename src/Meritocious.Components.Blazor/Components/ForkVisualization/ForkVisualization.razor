@namespace Meritocious.Components.Blazor
@inherits ComponentBase

<div class="meritocious-fork-view">
    <div class="meritocious-fork-header">
        <h2>Idea Evolution Map</h2>
        <div class="meritocious-fork-controls">
            <MeritosiousButton
                Variant="ButtonVariant.Secondary"
                OnClick="@(() => CurrentView = "timeline")">
                <i class="fas fa-stream"></i>
                Timeline
            </MeritosiousButton>
            <MeritosiousButton
                Variant="ButtonVariant.Secondary"
                OnClick="@(() => CurrentView = "tree")">
                <i class="fas fa-sitemap"></i>
                Tree
            </MeritosiousButton>
        </div>
    </div>

    <div class="meritocious-fork-filters">
        <div class="meritocious-filter-group">
            <span>Filter by:</span>
            <MeritosiousSelect
                Options="@timeRangeOptions"
                @bind-Value="@selectedTimeRange"
                Placeholder="Time Range" />
            <MeritosiousSelect
                Options="@sortOptions"
                @bind-Value="@selectedSort"
                Placeholder="Sort" />
        </div>

        <MeritosiousButton
            Variant="ButtonVariant.Primary"
            OnClick="@OnAdvancedFilters">
            <i class="fas fa-sliders-h"></i>
            Advanced Filters
        </MeritosiousButton>
    </div>

    <div class="@($"meritocious-fork-content view-{CurrentView}")">
        @if (CurrentView == "timeline")
        {
            <EvolutionTimeline
                Nodes="@evolutionData"
                OnNodeClick="@HandleNodeClick" />
        }
        else
        {
            <EvolutionTree
                Nodes="@evolutionData"
                OnNodeClick="@HandleNodeClick" />
        }
    </div>
</div>

@code {
