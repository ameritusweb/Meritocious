@namespace Meritocious.Components.Blazor
@inherits ComponentBase

<div class="meritocious-card @(Interactive ? "meritocious-card-interactive" : "")">
    <div class="meritocious-card-body">
        <div class="meritocious-card-content">
            <div>
            @if (HeaderContent != null)
            {
                <div class="meritocious-card-header">
                    @HeaderContent
                </div>
            }

            @ChildContent

            @if (FooterContent != null)
            {
                <div class="meritocious-card-footer">
                    @FooterContent
                </div>
            }
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public RenderFragment? HeaderContent { get; set; }
    [Parameter] public RenderFragment? FooterContent { get; set; }
    [Parameter] public bool Interactive { get; set; }
}