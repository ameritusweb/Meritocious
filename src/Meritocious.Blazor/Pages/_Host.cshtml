@page "/"
@using Microsoft.AspNetCore.Components.Web
@namespace Meritocious.Blazor.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="~/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="css/site.css" rel="stylesheet" />
    <link href="Meritocious.Blazor.styles.css" rel="stylesheet" />
    <link rel="icon" type="image/png" href="favicon.png"/>
    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
    <link id="antd-theme-style" href="_content/AntDesign/css/ant-design-blazor.css" rel="stylesheet" />
    <link id="antd-theme-dark" href="_content/AntDesign/css/ant-design-blazor.dark.css" rel="stylesheet" disabled />
    <script src="js/google-signin.js"></script>

    <style>
        .fork-graph-container {
            background: #fff;
            padding: 24px;
            margin: 24px 0;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.15);
        }

        .fork-graph {
            background: #fff;
            border: 1px solid #e8e8e8;
            border-radius: 4px;
        }

        .graph-tooltip {
            position: absolute;
            padding: 8px;
            background: rgba(255, 255, 255, 0.95);
            border: 1px solid #ccc;
            border-radius: 4px;
            pointer-events: none;
            font-size: 12px;
            z-index: 1000;
            box-shadow: 0 2px 8px rgba(0,0,0,0.15);
        }

        .node-rect {
            stroke: #666;
            fill: #fff;
        }

        .link {
            fill: none;
            stroke: #666;
            stroke-width: 1.5px;
        }

        .hull {
            opacity: 0.1;
            stroke-width: 1.5px;
        }
    </style>
</head>
<body>
    <component type="typeof(App)" render-mode="ServerPrerendered" />

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <!-- Ant Design Blazor JS -->
    <script src="_content/AntDesign/js/ant-design-blazor.js"></script>
    <script src="_content/AntDesign.ProLayout/js/ant-design-pro-layout-blazor.js"></script>
    
    <!-- Application JS -->
    <script src="js/editor.js"></script>
    <script src="js/tab-gestures.js"></script>
    <script src="js/theme-manager.js"></script>
    
    <!-- D3 and Dagre for fork visualization -->
    <script src="js/lib/d3.min.js"></script>
    <script src="js/lib/dagre.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.9.1/chart.min.js"></script>
    <script src="_framework/blazor.server.js"></script>
</body>
</html>
